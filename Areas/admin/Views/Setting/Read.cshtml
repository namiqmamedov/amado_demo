@model Setting
@{
    ViewData["Title"] = "Read";
}

<h1>Info</h1>
<div class="content">
    <div class="main product-index">
        <div class="row">
            <form>
              <div class="form-group">
                 @if (Model.Key == "FooterLogo" || Model.Key == "HeaderLogo")
                 {
                    <img src="~/assets/img/core-img/@Model.Value" class="mt-3 mb-3 d-flex" />
                    <input type="file" asp-for="File" disabled class="form-control" />
                 }
                 else
                 {
                    <input class="form-control" disabled asp-for="Value" placeholder="Name...">
                 }
              </div>
                  <a class="btn btn-primary" asp-area="admin" asp-controller="setting" asp-action="index">
                      Back to menu
                  </a>
            </form>
        </div>
    </div>
</div>
